<h1>Sign In</h1>

<%= form_with url: sign_in_path do |form|%>
 <div class="mb-3">
  <%= form.label :email%>
  <%= form.text_field :email, class: "form-control", placeholder: "abubakar@gmail.com"%>
 </div>
 <div class="mb-3">
 <%= form.label :password%>
  <%= form.password_field :password, class: "form-control", placeholder: "password"%>
 </div>
 <%= link_to "Forgot Password?", password_reset_path%>
 <div class="mb-3">
 <%= form.submit "Sign Up", class:"btn btn-primary" %>

<% end %>